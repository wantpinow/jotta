{
  "name": "jotta",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "db:generate": "bun run --env-file .env.local drizzle-kit --config ./src/server/db/drizzle.config.ts generate",
    "db:migrate": "bun run --env-file .env.local tsx ./src/server/db/migrate/index.ts",
    "db:push": "bun run drizzle-kit --config ./src/server/db/drizzle.config.ts push:pg",
    "db:studio": "bun run --env-file .env.local drizzle-kit --config ./src/server/db/drizzle.config.ts studio",
    "db:seed": "bun --bun run --env-file .env.local --print tsx src/server/db/seed/index.ts",
    "db:start": "bun --bun run --env-file .env.local ./scripts/db/start-database.sh",
    "db:stop": "bun --bun run --env-file .env.local ./scripts/db/stop-database.sh",
    "db:reset": "bun run db:stop; bun run db:start; sleep 2; bun run db:migrate; bun run db:seed"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@neondatabase/serverless": "^0.10.4",
    "@noble/hashes": "^1.7.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toggle": "^1.1.2",
    "@t3-oss/env-core": "^0.12.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tiptap/extension-link": "^2.11.5",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "arctic": "^3.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.41.0",
    "lucide-react": "^0.483.0",
    "next": "15.2.3",
    "next-themes": "^0.4.6",
    "openai": "^4.89.0",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
